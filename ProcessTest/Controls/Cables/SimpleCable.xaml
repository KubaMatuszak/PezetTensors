<UserControl x:Class="ProcessTest.Controls.Cables.SimpleCable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessTest.Controls.Cables"
             xmlns:conv="clr-namespace:ProcessTest.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Border BorderBrush="Transparent" BorderThickness="0">
            <Canvas>
                <Path x:Name="Path2" StrokeThickness="4" Stroke="Black"/>
                <Path x:Name="Path1" StrokeThickness="2" Stroke="White"/>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
