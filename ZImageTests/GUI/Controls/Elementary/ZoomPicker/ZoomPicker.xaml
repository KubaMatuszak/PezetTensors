<UserControl x:Class="ZImageTests.GUI.Controls.Elementary.ZoomPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZImageTests.GUI.Controls.Elementary"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100" x:Name="MyZoomPicker">
    
    <ComboBox ItemsSource="{Binding Path=ZoomList, ElementName=MyZoomPicker}"
              IsReadOnly="False"
              IsEditable="True">
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding }"/>
                    <TextBlock Grid.Column="1" Text="%"/>
                </Grid>
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>
